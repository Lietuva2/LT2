@model Data.ViewModels.Account.EducationAndWorkEditModel
@using Globalization.Resources.Account
@using Globalization.Resources.Shared
<div class="fields_container @Model.MemberOfParties[Model.EditIndex].IsCurrentClass">
    <p class="uiblock">
        <span class="block">@Resource.PartyName</span>
        @Html.TextBoxFor(m => m.MemberOfParties[Model.EditIndex].PartyName, new { @class = "txt_xl" })
    </p>
    <p class="uiblock">
        <br />
        <a href="javascript:void(0)" class="delete">@SharedStrings.Delete</a>
    </p>
    <div class="clear">
    </div>
    <p class="uiblock">
        <label style="font-weight: normal;">
            @Html.CheckBoxFor(m => m.MemberOfParties[Model.EditIndex].IsCurrent, new Dictionary<string, object> { { "class", "chkcurrent" } })
            @Resource.CurrentParty
        </label>
    </p>
    <div class="clear">
    </div>
    <p class="uiblock">
        <span class="block">@Resource.From</span>
        @Html.HiddenFor(m => m.MemberOfParties[Model.EditIndex].Id)
        @Html.HiddenFor(m => m.MemberOfParties[Model.EditIndex].IsDeleted, new { @class = "hiddenIsDeleted" })
        @Html.DropDownListFor(m => m.MemberOfParties[Model.EditIndex].StartYear, new SelectList(Model.WorkYears as System.Collections.IEnumerable, "Value", "Text",
                                                                                Model.MemberOfParties[Model.EditIndex].StartYear))
        @Html.ValidationMessageFor(m => m.MemberOfParties[Model.EditIndex].StartYear)
        @Html.DropDownListFor(m => m.MemberOfParties[Model.EditIndex].StartMonth, new SelectList(Model.Months as System.Collections.IEnumerable, "Value", "Text",
                                                                                         Model.MemberOfParties[Model.EditIndex].StartMonth))
    </p>
    <p class="uiblock enddate">
        <span class="block">@Resource.To</span>
        @Html.DropDownListFor(m => m.MemberOfParties[Model.EditIndex].EndYear, new SelectList(Model.WorkYears as System.Collections.IEnumerable, "Value", "Text",
                                                                                Model.MemberOfParties[Model.EditIndex].EndYear))
        @Html.DropDownListFor(m => m.MemberOfParties[Model.EditIndex].EndMonth, new SelectList(Model.Months as System.Collections.IEnumerable, "Value", "Text",
                                                                                         Model.MemberOfParties[Model.EditIndex].EndMonth))
        @Html.ValidationMessageFor(m => m.MemberOfParties[Model.EditIndex].EndYear)
        <span class="present">@Resource.ToPresent</span>
    </p>
    <hr />
    <div class="clear">
    </div>
</div>
