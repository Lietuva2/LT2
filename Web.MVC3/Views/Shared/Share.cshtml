@using Web.Helpers
@model string
<div style="margin-top: 20px; height: 90px;">
    <div>
        <input type="text" class="share_url" title="@Url.ToAbsoluteUrl(Model)" value="@Url.ToAbsoluteUrl(Model)" />
    </div>
    <div class="addthis_toolbox addthis_default_style" style="width: 300px;">
        <a class="addthis_button_facebook_like" addthis:url="@Url.ToAbsoluteUrl(Model)" fb:like:layout="button_count"></a>
        <a class="addthis_button_tweet" addthis:url="@Url.ToAbsoluteUrl(Model)"></a>
    </div>
    <div class="addthis_toolbox addthis_default_style" addthis:url="@Url.ToAbsoluteUrl(Model)" style="width: 300px;">
        <a class="addthis_button_google_plusone" addthis:url="@Url.ToAbsoluteUrl(Model)" g:plusone:size="medium" title="Google+"></a>
        <a class="addthis_counter addthis_pill_style" addthis:url="@Url.ToAbsoluteUrl(Model)" href="@Url.ToAbsoluteUrl(Model)"></a>
    </div>
</div>
